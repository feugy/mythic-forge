@import 'constants'

.authoring.perspective
  
  > .left
    width 250px
    display flex

    .explorer
      iconSize = 18px
      overflow auto
      flex-grow 1
      
      .file
      h1
        hoverable()
        padding 5px 2px
        white-space nowrap

      > .file
        padding-left 3px

      // folder icons
      h1 > i, .file > i, h1::before
        display inline-block
        background-image url(images/tree.png)
        background-repeat no-repeat
        height iconSize 
        width iconSize
        vertical-align middle

      h1::before,
      .file::before
        content ''
      .open > h1::before
        background-position -18px 0
      h1 > i
        background-position -36px 0
        margin-right 3px
      .open > h1 > i
        background-position -54px 0
      .file > i
        background-image url(images/icons-16.png)
        background-position 0px -80px

      .file.styl > i
        background-position -16px -80px
      .file.coffee > i
        background-position -32px -80px
      .file.js > i
      .file.json > i
        background-position -48px -80px
      .file.html > i
      .file.htm > i
        background-position -64px -80px
      .file.svg > i
        background-position -80px -80px
      .file.css > i
        background-position -96px -80px

      .content
        margin-left iconSize

      .selected > h1
      .selected:hover > h1
      .file.selected
      .file.selected:hover
        background-color selectedColor

  > .right

    .separator
      margin 0 10px 0 0

    .history
      float right
      
    .ui-tabs .ui-tabs-panel
      overflow hidden
      padding 2px 0 0
      display flex

    .ui-tabs-nav
      for icon, idx in file stylus coffee javascript html svg css
        li a i.{icon}
          background-position unit(-25*idx, 'px') -125px

    .file-upload
      display none

  .view.file:not(.icon)
    width 100%
    flex-grow 1

    display flex
    flex-direction column

    .content.adv-editor
      margin 0
      flex-grow 1

    > img 
      display none

  .view.file.image

    > img
      display block
      margin 0 auto
      max-width 100%

#restorablesPopup

  ul
    max-height 100px
    overflow auto

    li
      padding 0.25em 0.5em
      font-size fontSize*0.95
      hoverable()
