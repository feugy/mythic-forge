@import 'constants'

.moderation.perspective


  > .left 
    display flex
    flex-direction column

    .map-container
      flex-grow 1
      overflow-y auto
      overflow-x hidden
      z-index 0

  .toolbar
    z-index 1

    .search
      box-sizing border-box
      display inline-block
      width 40%

    .maps
      box-sizing border-box
      display inline-block
      width 59%
      text-align right


  .map-widget
    margin 0 0 15px 0

    .map-item
      cursor pointer

  .commands label
    width 100px
    display inline-block
    text-align right

  > .right
  
    > .action-bar
      position relative

      .embody
        position absolute
        top 0.5em
        right 0.5em

        .value
          font-weight bold
          cursor pointer

    .ui-tabs.action-bars
      display inline-block
      padding 0
      border none
      margin-left 20px
      vertical-align middle

      .ui-tabs-nav
        display none

      .ui-tabs-panel
        padding 0

    .ui-tabs.views .ui-tabs-nav 

      li a 
        padding 0.2em 2em 0.2em 0.5em

      .uid
        font-size fontSize*0.65
        margin-right -2em

      .ui-icon-close
        position: absolute
        right 0.5em
        top 0.5em

    .action-bar .separator
        margin 0 0 2px 9px
        vertical-align bottom

  .view 

    .apply-rule-container
      margin 0
      position absolute
      right 1.3em
      top 3px
      width auto

    > table
      margin-top 10px
      width 100%

      td 
        vertical-align top

      label
        display inline-block
        margin-right 1em
        padding-top 0.4em
        text-align right
        vertical-align top
        width 120px

      .left
        width 130px
        padding-top 0.5em
        text-align right

      label
        width 100%
        margin 0 1em 0.5em 0

      .right
        padding-left 1em
        
        > *
          margin-bottom 0.5em

        label
          width 75px

      input[type="text"]
        min-width 50%

    .prop 

      .left
        padding-top 0.5em
        width 130px
        text-align right

    .update-date
    .creation-date
      padding 0.5em 0
      color disabledColor

  .view.item

    .embody.ui-button
      display inline-block
      height 24px
      width 28px
      vertical-align bottom

      .ui-button-icon-primary
        top 1px

      .ui-button-text
        display none

    .embody.ui-button.active
      background white
      box-shadow 0 0 3px #888888

.choose-type 

  .loadable
    cursor pointer
    display inline-block
    user-select none
    
  .loadable:hover
    box-shadow: 0 0 10px 5px #AAA