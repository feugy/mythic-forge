@import 'constants'

#deploy-confirmation-popup

  ol
    margin 2em 0
    list-style decimal inside

  input
    width 100%
    box-sizing border-box

  .errors
    color errorColor
    font-size fontSize*0.8

.admin.perspective

  > .left
    box-flex inherit

  > .right
    min-width 600px

  .view
    border 1px solid borderColor
    border-radius 5px
    box-shadow 0 5px 10px shadowColor
    padding 15px

    > h1
      box-sizing border-box
      border-radius 4px
      padding 0.5em
      margin-bottom 1em
      font-size fontSize*1.2

      i 
        margin-right 0.7em

  .deploy.view

    > div
      margin-bottom 0.5em

    label
      font-size fontSize*1.2
      width auto

    .progress
      display inline-block
      margin-left 1em

      > *
        display inline-block

      .loading    
        height 16px
        background url('images/loader.gif')
        background-repeat no-repeat
        background-position center top
        margin 0 1em
        width 210px

  .turns.view

    .list
      margin 1em 0

      > *
        padding 0.2em 0

      input
        margin-right 0.3em
        vertical-align -2px

    .progress
      color dropColor
    .progress:after
      content '...'

    .success
      color successColor
    .success:after
      content '- ok'
      padding-left 0.5em

    .failure
      color: errorColor
    .failure:after
      content '- ko'
      padding-left 0.5em

    .fatal
      background-color red