#!/usr/bin/env node
var utils = require('../lib/utils');
var http = require('http');
var apiPort = utils.confKey('server.apiPort');
var staticPort = utils.confKey('server.staticPort');

// Start within the same server if necessary

var front = require('../lib/web/front');
// And the api server
var middle = require('../lib/web/middle');

if (apiPort === staticPort) {
  front(middle.app);
} else {
  // or create separate server
  front().listen(staticPort);
}
middle.server.listen(apiPort);